default_platform :ios

platform :ios do
  desc "Upload application to TestFlight"
  before_all do
    setup_circle_ci
  end

  lane :beta do
    sh('cd ../ && flutter build ios --config-only --no-codesign')
    match(type: "appstore")
    build_app(scheme: "Runner")
    app_store_connect_api_key(is_key_content_base64: true)
    upload_to_testflight(is_key_content_base64: true)
  end
end

